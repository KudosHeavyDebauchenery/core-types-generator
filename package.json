{
  "name": "boilerplate-node-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "serve": "NODEMON=true webpack --watch",
    "serve:dev": "NODE_ENV=development npm run serve",
    "serve:prod": "NODE_ENV=production npm run serve",
    "build": "esbuild src/app.ts --bundle --outfile=dist/main.js --platform=node",
    "build:dev": "NODE_ENV=development npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "dist": "npm run build && node dist/main.js",
    "lint": "eslint . --ext .ts",
    "prettier": "prettier 'src/**/*.ts' --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KMP-Agency/boilerplate-node-typescript.git"
  },
